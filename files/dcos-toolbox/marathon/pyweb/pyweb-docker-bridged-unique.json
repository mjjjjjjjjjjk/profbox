{
  "id": "/pyweb/docker/bridged/unique",
  "cmd": "env | sort && python3 -m http.server",
  "cpus": 0.1,
  "mem": 32,
  "instances": 2,
  "constraints": [
    [
      "hostname",
      "UNIQUE"
    ]
  ],
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "python:3-alpine"
    },
    "portMappings": [
      {
        "containerPort": 8000,
        "hostPort": 0,
        "name": "http",
        "protocol": "tcp",
        "labels": {
          "VIP_0": "/pyweb.docker.bridged.unique:80"
        }
      }
    ]
  },
  "healthChecks": [
    {
      "protocol": "HTTP",
      "path": "/",
      "portIndex": 0,
      "gracePeriodSeconds": 60,
      "intervalSeconds": 20,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3
    }
  ],
  "readinessChecks": [
    {
      "name": "readinessCheck",
      "protocol": "HTTP",
      "path": "/",
      "portName": "http",
      "intervalSeconds": 30,
      "timeoutSeconds": 10,
      "httpStatusCodesForReady": [
        200
      ],
      "preserveLastResponse": false
    }
  ],
  "labels": {
    "HAPROXY_GROUP": "external",
    "HAPROXY_0_ENABLED": "true",
    "HAPROXY_0_VHOST": "vhost.example.com",
    "HAPROXY_0_PATH": "/pyweb/docker/bridged/unique",
    "HAPROXY_0_HTTP_BACKEND_PROXYPASS_PATH": "/pyweb/docker/bridged/unique"
  }
}
